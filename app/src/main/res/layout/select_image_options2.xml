<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/bp_margin_20">




    <Button
        android:id="@+id/select_image_camera"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_32"
        android:background="@color/colorPrimary"
        android:text="@string/camera"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="22dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />
    <Button
        android:id="@+id/select_image_gallery"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_32"
        android:background="@color/colorPrimary"
        android:text="@string/gallery"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/select_image_camera"
        android:layout_alignLeft="@+id/select_image_camera"
        android:layout_alignStart="@+id/select_image_camera" />

</RelativeLayout>