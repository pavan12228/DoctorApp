<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorTransperent"
    tools:context=".common_activities.ForgotPassworsActivity">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_200"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/bp_margin_20"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/bp_margin_20">

        <EditText
            android:id="@+id/activity_forgot_password_email_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bp_margin_15"
            android:hint="@string/email"
            android:paddingLeft="@dimen/bp_margin_8" />

        <Button
            android:id="@+id/forgot_activity_submit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bp_margin_15"
            android:background="@drawable/roundcorner_green"
            android:text="@string/submit"
            android:padding="@dimen/bp_margin_8"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

    <ImageView
        android:id="@+id/forgot_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/linearLayout"
        android:layout_gravity="right"
        android:layout_marginRight="@dimen/margin_25"
        android:layout_marginTop="@dimen/bp_margin_5"
        android:src="@drawable/ic_cross"
        android:padding="@dimen/bp_margin_10"/>

</RelativeLayout>
