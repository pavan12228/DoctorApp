<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/bp_margin_15">

        <View
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/bp_margin_1"
            android:background="@color/colorPrimary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/bp_margin_7"
            android:text="@string/add_new_shedule"
            android:textColor="@color/colorPrimaryDark" />

        <View
            android:layout_width="@dimen/margin_50"
            android:layout_height="@dimen/bp_margin_1"
            android:background="@color/colorPrimary" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bp_margin_15">

            <View
                android:id="@+id/middle_view"
                android:layout_width="@dimen/bp_margin_15"
                android:layout_height="@dimen/bp_margin_1"
                android:layout_centerInParent="true" />

            <TextView
                android:id="@+id/edit_shedule_from_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/from"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/bp_margin_15" />

            <EditText
                android:id="@+id/edit_shedule_fromdate_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_shedule_from_tv"
                android:layout_marginTop="@dimen/bp_margin_10"

                android:layout_toLeftOf="@+id/middle_view"
                android:background="@color/shedule_list_item"
                android:drawablePadding="@dimen/bp_margin_5"
                android:drawableRight="@drawable/ic_date"
                android:hint="dd/mm/yyyy"
                android:padding="@dimen/bp_margin_8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bp_margin_1"
                android:layout_below="@+id/edit_shedule_fromdate_et"
                android:layout_marginTop="@dimen/bp_margin_7"
                android:layout_toLeftOf="@+id/middle_view"
                android:background="@color/shedule_header" />

            <TextView
                android:id="@+id/edit_shedule_to_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/middle_view"
                android:text="@string/to"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/bp_margin_15" />

            <EditText
                android:id="@+id/edit_shedule_todate_et"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edit_shedule_to_tv"
                android:layout_marginTop="@dimen/bp_margin_10"
                android:layout_toRightOf="@+id/middle_view"
                android:background="@color/shedule_list_item"
                android:drawablePadding="@dimen/bp_margin_5"
                android:drawableRight="@drawable/ic_date"
                android:hint="dd/mm/yyyy"
                android:padding="@dimen/bp_margin_8" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/bp_margin_1"
                android:layout_below="@+id/edit_shedule_todate_et"
                android:layout_marginTop="@dimen/bp_margin_7"
                android:layout_toRightOf="@+id/middle_view"
                android:background="@color/shedule_header" />

        </RelativeLayout>

        <Spinner
            android:id="@+id/edit_shedule_timeslot_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bp_margin_20"
            android:padding="@dimen/bp_margin_8" />

        <View
            android:id="@+id/edit_shedule_bottom_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/bp_margin_1"
            android:layout_below="@+id/edit_shedule_timeslot_et"
            android:layout_marginTop="@dimen/bp_margin_7"
            android:background="@color/shedule_header" />

        <Button
            android:id="@+id/edit_shedule_shedule_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bp_margin_20"
            android:background="@color/colorPrimary"
            android:padding="@dimen/bp_margin_8"
            android:text="SHEDULE"
            android:layout_marginBottom="@dimen/bp_margin_10"
            android:textColor="@color/white" />
    </LinearLayout>

</ScrollView>