<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/margin_50">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50"
        android:background="@color/parrot"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_backicon"
        android:padding="@dimen/bp_margin_10"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:id="@+id/back_iv" />
    <TextView
        android:layout_width="@dimen/margin_225"
        android:layout_height="wrap_content"
        tools:text="@string/cardiologist"
        android:textColor="@color/white"
        android:textSize="@dimen/bp_margin_15"
        android:layout_marginLeft="@dimen/bp_margin_10"
        android:layout_marginStart="@dimen/bp_margin_10"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/back_iv"
        android:layout_toEndOf="@+id/back_iv"
        android:layout_marginTop="@dimen/bp_margin_10"
        android:id="@+id/maintitle_tv" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bp_margin_8"
        tools:text="Borabanda,Hyderabad"
        android:textColor="@color/white"
        android:layout_below="@+id/maintitle_tv"
        android:layout_alignLeft="@+id/maintitle_tv"
        android:layout_alignStart="@+id/maintitle_tv"
        android:id="@+id/subtitle_tv" />
    <ImageView
        android:id="@+id/menuicon_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_menu_dots"
        android:padding="@dimen/bp_margin_5"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/bp_margin_15"
        android:layout_marginEnd="@dimen/bp_margin_15"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
</FrameLayout>