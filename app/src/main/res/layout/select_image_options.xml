<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:padding="@dimen/bp_margin_10"
        android:src="@drawable/ic_close_white_24dp"
        android:id="@+id/select_image_close"/>

    <Button
        android:id="@+id/select_image_camera"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_32"
        android:layout_above="@+id/view"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Camera"
        android:textAllCaps="false"
        android:textColor="@color/white" />

    <View
        android:id="@+id/view"
        android:layout_width="@dimen/bp_margin_1"
        android:layout_height="@dimen/bp_margin_15"
        android:layout_centerInParent="true" />

    <Button
        android:id="@+id/select_image_gallery"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/margin_32"
        android:layout_below="@+id/view"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:text="Gallery"
        android:textAllCaps="false"
        android:textColor="@color/white" />

</RelativeLayout>