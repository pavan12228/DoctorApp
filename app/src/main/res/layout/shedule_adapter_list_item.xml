<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bp_margin_5"
        android:background="@color/shedule_list_item"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/bp_margin_3">

        <TextView
            android:id="@+id/shedule_adpter_id_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:text="1"
            android:textAlignment="center"
            android:textSize="@dimen/bp_margin_10" />

        <TextView
            android:id="@+id/shedule_adpter_from_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="22-01-16"
            android:textAlignment="center"
            android:textSize="@dimen/bp_margin_10" />

        <TextView
            android:id="@+id/shedule_adpter_to_date_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/bp_margin_10"
            android:text="22-01-16"
            android:textAlignment="center"
            android:textSize="@dimen/bp_margin_10" />

        <LinearLayout
            android:id="@+id/shedule_adpter_timings_ll"
            android:layout_width="0dp"
            android:layout_marginLeft="@dimen/bp_margin_15"
            android:layout_height="wrap_content"
            android:layout_weight="3.7"
            android:gravity="center"
            android:orientation="vertical">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/shedule_adpter_edit_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/bp_margin_5"
                android:layout_marginRight="@dimen/bp_margin_8"
                android:src="@drawable/ic_pencil" />

            <ImageView
                android:id="@+id/shedule_adpter_cancel_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/bp_margin_5"
                android:src="@drawable/ic_cross" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>